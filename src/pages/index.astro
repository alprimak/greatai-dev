---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';
import { getCollection } from 'astro:content';
import FormattedDate from '../components/FormattedDate.astro';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
).slice(0, 3);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main>
			<section class="hero">
				<h1>AI &amp; Data Infrastructure for Finance</h1>
				<p class="tagline">
					Deep technical insights on building high-performance data grids,
					AI-powered applications, and software that handles real money.
				</p>
			</section>

			<section class="focus-areas">
				<h2>What I Write About</h2>
				<div class="areas-grid">
					<div class="area">
						<h3>Data Grids</h3>
						<p>Building grids that handle millions of rows with sub-millisecond updates. Performance patterns that actually work.</p>
					</div>
					<div class="area">
						<h3>AI in Production</h3>
						<p>Practical approaches to shipping AI features. From LLM integration to autonomous agents that don't hallucinate your data.</p>
					</div>
					<div class="area">
						<h3>Finance Tech</h3>
						<p>Software for trading, analytics, and financial workflows. Where correctness and speed both matter.</p>
					</div>
				</div>
			</section>

			{posts.length > 0 && (
				<section class="recent-posts">
					<h2>Recent Posts</h2>
					<ul>
						{posts.map((post) => (
							<li>
								<a href={`/blog/${post.id}/`}>
									<h3 class="title">{post.data.title}</h3>
									<p class="description">{post.data.description}</p>
									<div class="meta">
										<p class="date"><FormattedDate date={post.data.pubDate} /></p>
										{post.data.tags && post.data.tags.length > 0 && (
											<div class="tags">
												{post.data.tags.map((tag: string) => (
													<span class="tag">{tag}</span>
												))}
											</div>
										)}
									</div>
								</a>
							</li>
						))}
					</ul>
					<a href="/blog" class="view-all">View all posts â†’</a>
				</section>
			)}
		</main>
		<Footer />
		<style>
			.hero {
				margin-bottom: 3rem;
			}
			.hero h1 {
				font-size: 2.5rem;
				margin-bottom: 1rem;
			}
			.tagline {
				font-size: 1.25rem;
				color: rgb(var(--gray));
				max-width: 600px;
			}
			.focus-areas {
				margin-bottom: 3rem;
			}
			.areas-grid {
				display: grid;
				grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
				gap: 1.5rem;
				margin-top: 1rem;
			}
			.area {
				padding: 1.5rem;
				background: var(--bg-secondary);
				border-radius: 8px;
				box-shadow: var(--box-shadow);
			}
			.area h3 {
				margin: 0 0 0.5rem 0;
				font-size: 1.25rem;
			}
			.area p {
				margin: 0;
				color: rgb(var(--gray));
				font-size: 0.95rem;
			}
			.recent-posts ul {
				list-style: none;
				padding: 0;
				display: flex;
				flex-direction: column;
				gap: 1rem;
			}
			.recent-posts li {
				margin: 0;
			}
			.recent-posts a {
				text-decoration: none;
				display: block;
				padding: 1.5rem;
				background: var(--bg-secondary);
				border-radius: 12px;
				border: 1px solid rgba(var(--gray), 0.2);
				transition: all 0.2s ease;
			}
			.recent-posts a:hover {
				border-color: rgb(var(--accent));
				transform: translateY(-2px);
				box-shadow: 0 4px 12px rgba(var(--gray), 0.15);
			}
			.recent-posts .title {
				margin: 0 0 0.5rem 0;
				color: rgb(var(--black));
				font-size: 1.5rem;
				font-weight: 600;
				line-height: 1.3;
			}
			.recent-posts a:hover .title {
				color: rgb(var(--accent));
			}
			.recent-posts .description {
				margin: 0 0 0.75rem 0;
				color: rgb(var(--gray));
				font-size: 1rem;
				line-height: 1.5;
				display: -webkit-box;
				-webkit-line-clamp: 2;
				-webkit-box-orient: vertical;
				overflow: hidden;
			}
			.recent-posts .meta {
				display: flex;
				align-items: center;
				gap: 1rem;
				flex-wrap: wrap;
			}
			.recent-posts .date {
				font-size: 0.875rem;
				color: rgb(var(--gray));
				margin: 0;
			}
			.recent-posts .tags {
				display: flex;
				gap: 0.5rem;
				flex-wrap: wrap;
			}
			.recent-posts .tag {
				font-size: 0.75rem;
				padding: 0.25rem 0.5rem;
				background: rgba(var(--accent), 0.1);
				color: rgb(var(--accent));
				border-radius: 4px;
			}
			.view-all {
				display: inline-block;
				margin-top: 1rem;
			}
		</style>
	</body>
</html>
