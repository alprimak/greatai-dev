---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';
import { getCollection } from 'astro:content';
import FormattedDate from '../components/FormattedDate.astro';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
).slice(0, 3);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main>
			<section class="hero">
				<h1>AI &amp; Data Infrastructure for Finance</h1>
				<p class="tagline">
					Deep technical insights on building high-performance data grids,
					AI-powered applications, and software that handles real money.
				</p>
			</section>

			<section class="focus-areas">
				<h2>What I Write About</h2>
				<div class="areas-grid">
					<div class="area">
						<h3>Data Grids</h3>
						<p>Building grids that handle millions of rows with sub-millisecond updates. Performance patterns that actually work.</p>
					</div>
					<div class="area">
						<h3>AI in Production</h3>
						<p>Practical approaches to shipping AI features. From LLM integration to autonomous agents that don't hallucinate your data.</p>
					</div>
					<div class="area">
						<h3>Finance Tech</h3>
						<p>Software for trading, analytics, and financial workflows. Where correctness and speed both matter.</p>
					</div>
				</div>
			</section>

			{posts.length > 0 && (
				<section class="recent-posts">
					<h2>Recent Posts</h2>
					<ul>
						{posts.map((post) => (
							<li>
								<a href={`/blog/${post.id}/`}>
									<h3>{post.data.title}</h3>
									<p class="date"><FormattedDate date={post.data.pubDate} /></p>
									<p>{post.data.description}</p>
								</a>
							</li>
						))}
					</ul>
					<a href="/blog" class="view-all">View all posts â†’</a>
				</section>
			)}
		</main>
		<Footer />
		<style>
			.hero {
				margin-bottom: 3rem;
			}
			.hero h1 {
				font-size: 2.5rem;
				margin-bottom: 1rem;
			}
			.tagline {
				font-size: 1.25rem;
				color: rgb(var(--gray));
				max-width: 600px;
			}
			.focus-areas {
				margin-bottom: 3rem;
			}
			.areas-grid {
				display: grid;
				grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
				gap: 1.5rem;
				margin-top: 1rem;
			}
			.area {
				padding: 1.5rem;
				background: var(--bg-secondary);
				border-radius: 8px;
				box-shadow: var(--box-shadow);
			}
			.area h3 {
				margin: 0 0 0.5rem 0;
				font-size: 1.25rem;
			}
			.area p {
				margin: 0;
				color: rgb(var(--gray));
				font-size: 0.95rem;
			}
			.recent-posts ul {
				list-style: none;
				padding: 0;
			}
			.recent-posts li {
				margin-bottom: 1.5rem;
			}
			.recent-posts a {
				text-decoration: none;
				display: block;
				padding: 1rem;
				border-radius: 8px;
				transition: background 0.2s;
			}
			.recent-posts a:hover {
				background: rgba(var(--gray-light), 0.5);
			}
			.recent-posts h3 {
				margin: 0 0 0.25rem 0;
				color: rgb(var(--black));
			}
			.recent-posts .date {
				font-size: 0.875rem;
				color: rgb(var(--gray));
				margin: 0 0 0.5rem 0;
			}
			.recent-posts p {
				margin: 0;
				color: rgb(var(--gray-dark));
			}
			.view-all {
				display: inline-block;
				margin-top: 1rem;
			}
		</style>
	</body>
</html>
