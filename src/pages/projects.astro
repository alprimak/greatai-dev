---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE } from '../consts';

const products = [
	{
		name: 'AskTurret',
		description: 'AI-powered data grid for financial applications. High-performance grid with natural language queries, real-time updates, and enterprise-grade reliability.',
		url: 'https://askturret.com',
		tags: ['Data Grid', 'AI', 'Finance', 'TypeScript'],
		featured: true,
	},
	{
		name: 'AskTurret Grid',
		description: 'Standalone high-performance data grid component. Handles millions of rows with sub-millisecond updates. Built for trading and analytics.',
		url: 'https://grid.askturret.com',
		tags: ['Data Grid', 'Performance', 'TypeScript'],
		featured: true,
	},
];
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={`Products | ${SITE_TITLE}`} description="Products and tools I've built" />
	</head>
	<body>
		<Header />
		<main>
			<section>
				<h1>Products</h1>
				<p>Tools I've built for finance and data-intensive applications.</p>
				<ul class="project-list">
					{products.map((product) => (
						<li class="project-card">
							<h2>
								<a href={product.url} target="_blank" rel="noopener">{product.name}</a>
							</h2>
							<p>{product.description}</p>
							<div class="tags">
								{product.tags.map((tag) => (
									<span class="tag">{tag}</span>
								))}
							</div>
						</li>
					))}
				</ul>
			</section>
		</main>
		<Footer />
		<style>
			.project-list {
				list-style: none;
				padding: 0;
				display: grid;
				gap: 1.5rem;
			}
			.project-card {
				padding: 1.5rem;
				border-radius: 8px;
				background: white;
				box-shadow: var(--box-shadow);
			}
			.project-card h2 {
				margin: 0 0 0.5rem 0;
				font-size: 1.5rem;
			}
			.project-card h2 a {
				text-decoration: none;
			}
			.project-card h2 a:hover {
				text-decoration: underline;
			}
			.project-card p {
				margin: 0 0 1rem 0;
				color: rgb(var(--gray));
			}
			.tags {
				display: flex;
				gap: 0.5rem;
				flex-wrap: wrap;
			}
			.tag {
				padding: 0.25rem 0.5rem;
				background: rgb(var(--gray-light));
				border-radius: 4px;
				font-size: 0.875rem;
				color: rgb(var(--gray-dark));
			}
		</style>
	</body>
</html>
